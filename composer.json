{
    "name": "wackyapps/scoop-nation-api",
    "description": "Scoop Nation E-commerce API built with Slim PHP",
    "type": "project",
    "require": {
        "slim/slim": "^4.15",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.1",
        "php-di/slim-bridge": "^3.4",
        "zircote/swagger-php": "^4.8"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "swagger": "vendor/bin/openapi src/App -o public/swagger.json",
        "swagger:ui": "php -S localhost:8081 -t public/",
        "lint": "phpcs src/",
        "lint:fix": "phpcbf src/",
        "analyze": "phpstan analyse src/ --level=7"
    },
    "config": {
        "process-timeout": 0,
        "optimize-autoloader": true
    },
    "authors": [
        {
            "name": "Waqas Khan",
            "email": "wmkhan101@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}